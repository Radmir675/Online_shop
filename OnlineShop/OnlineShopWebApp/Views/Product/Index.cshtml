@model ProductViewModel
@{
    ViewData["Title"] = "Product";

}

<section>
    <div class="container-xxl">
        <div class="row align-items-start">
            <div class="col-7">
                <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                        @for (int i = 1; i < Model.Images.Count; i++)
                        {
                            <li data-target="#carouselExampleIndicators" data-slide-to="@i"></li>
                        }
                    </ol>
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img class="d-block w-100" style="width:768px" height="551" src="@Model.Images?.FirstOrDefault().Link">
                        </div>
                        @foreach (var image in Model.Images.Skip(1))
                        {
                            <div class="carousel-item">
                                <img class="d-block w-100" style="width:768px" height="551" src="@image.Link">
                            </div>
                        }
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
            <div class="col-5">
                <h4>Options:</h4>
                <h5>@Model.Name</h5>
                <p>
                    @Model.Cost
                    <br>
                    @Model.ShortDescription
                </p>
                <div class="btn-group" role="group" aria-label="Basic outlined example">
                    <a href="/purchases/index?productId=@Model.Id" button type="button" class="btn btn-outline-primary">Купить</a>
                    <a href="/" button type="button" class="btn btn-outline-primary">Продолжить покупки</a>
                </div>
            </div>
        </div>
    </div>
</section>