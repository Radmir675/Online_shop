@model List<UserViewModel>

<div class="container text-center">
    <div class="row justify-content-start">
        <div class="col-3">
            @await Html.PartialAsync("AdminToolbar")
        </div>
        <div class="col-9">
            <div class="border border-dark rounded">
                <h3>Users</h3>
                <hr />
                <form method="post">
                    <table class="table table-dark table-hover">
                        <thead>
                            <tr>
                                <th scope="col">User(email)</th>
                                <th scope="col">FullName</th>
                                <th scope="col">Phone</th>
                                <th scope="col">Role</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                @foreach (var user in Model)
                                {
                                    <tr>
                                        <th>

                                            <button type="submit" class="btn btn-link text-white" asp-area="Admin" asp-controller="Users" asp-action="ShowInfo" asp-route-userId="@user.Id">@user.Email</button>

                                        </th>
                                        <th scope="col"></th>
                                        <th scope="col">@user.Number</th>
                                        <th scope="col">@user.Role</th>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                    <button type="submit" class="btn btn-primary" asp-area="Admin" asp-controller="Users" asp-action="ShowNewUserForm">Add new user</button>
                </form>
            </div>
        </div>
    </div>
</div>


