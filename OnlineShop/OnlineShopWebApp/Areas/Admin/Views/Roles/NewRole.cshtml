@model RoleViewModel
<div class="container text-center">
    <div class="row justify-content-start">
        <div class="col-3">
            @await Html.PartialAsync("AdminToolbar")
        </div>
        <div class="col-9">
            <form method="post">
                <div class="border border-dark rounded" style="padding-bottom:20px;">
                    <h3>Roles</h3>
                    <hr />
                    <div class="text-danger font-weight-bold" asp-validation-summary="ModelOnly"></div>
                    <div class="row">
                        <label asp-for="Name" class="col-sm-2 col-form-label">Role name:</label><br />
                        <div class="col-sm-8">
                            <input asp-for="Name" name="Name" type="text" class="form-control" />
                            <span asp-validation-for="Name" />
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary" style="margin-top:30px;" asp-area="Admin" asp-controller="Roles" asp-action="Save">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>