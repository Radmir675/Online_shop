@model List<RoleViewModel>
<form method="post">
    <div class="container text-center">
        <div class="row justify-content-start">
            <div class="col-3">
                @await Html.PartialAsync("AdminToolbar")
            </div>
            <div class="col-9">
                <div class="border border-dark rounded" style="padding-bottom:20px;">
                    <h3>Roles</h3>
                    <div class="row">
                        <div class="col">
                            <table class="table">
                                <tbody>
                                    @foreach (var role in Model)
                                    {
                                        <tr>
                                            <td class="text-left" style="padding-left:20px">@role.Name</td>
                                            <td class="col-4 text-right">
                                                <button class="btn btn-outline-warning" style="margin-right:10px"
                                                        type="submit"
                                                        asp-area="Admin"
                                                        asp-controller="Roles"
                                                        asp-action="Delete"
                                                        asp-route-name="@role.Name">
                                                    <i class="bi bi-trash-fill"> Delete </i>
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-info" asp-area="Admin" asp-controller="Roles" asp-action="AddRole">Add role</button>
                </div>
            </div>
        </div>
    </div>
</form>